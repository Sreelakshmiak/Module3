	@Transactional
public boolean add(Product product)
{
	if(validate(product)) {
		repository.save(product);
		return false;
	}else {
		repository.save(product);
		return true;
	}
	
}

public boolean validate(Product product)
{
	if(product.getName().equals("AC"))
	{
		return true;
	}
	else {
		return false;
	}
}
